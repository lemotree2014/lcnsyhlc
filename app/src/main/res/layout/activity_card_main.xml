<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3ba5d9"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_account"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_info"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊城农商银行农金通"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ListView
            android:id="@+id/my_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:fadingEdge="none"
            android:childDivider="#00000000"
            android:background="#00000000"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            />


        <LinearLayout
            android:id="@+id/ll_addfragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/my_listview"
            android:orientation="vertical"
            android:background="@drawable/bg_menu"
            >
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_kzz"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡转账"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/btn_card"
                    />
                <TextView
                    android:id="@+id/tv_kcx"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡查询"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/btn_card"
                    />
                <TextView
                    android:id="@+id/tv_kqx"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡取现"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/btn_card"
                    />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>